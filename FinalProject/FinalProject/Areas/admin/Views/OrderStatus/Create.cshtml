@model orderstatus

@{ ViewBag.title = "Add status";
    ViewBag.heading = "Add status"; }

@section breadcrumb
{
    <li class="breadcrumb-item active"> <a asp-area="admin" asp-controller="Home" asp-action="Index"> home </a> </li>
    <li class="breadcrumb-item active"> <a asp-area="admin" asp-controller="orderstatuscontroller" asp-action="Index"> all status </a> </li>
    <li class="breadcrumb-item active"> add product </li>
}

@* ------------------------------------- Start RenderBody ------------------------------------------ *@

<form asp-area="admin" asp-controller="OrderStatus" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="@Model.status" class="col-md-2 custom-control-label"></label>
        <div class="col-md-10">
            <input asp-for="@Model.status" class="form-control" />
            <span asp-validation-for="@Model.status" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info" value="Add" />
    </div>
</form>

